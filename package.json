  "name": "sports-keeper",
  "version": "1.0.0",
  "description": "application for client sports-keeper",
  "main": "index.js",
  "homepage": "https://github.com/AlexAllGold/sports-keeper#readme",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "start:dev": "concurrently \"npx tsc --watch\" \"nodemon ./dist/index.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:format": "prettier --write .",
    "prepare": "husky install",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run -- -d ./src/config/database.ts"
  },
  "dependencies": {
    "@types/morgan": "^1.9.9",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.2.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "winston": "^3.11.0",
    "winston-mysql": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@stylistic/eslint-plugin": "^1.4.0",
    "@stylistic/eslint-plugin-js": "^1.4.0",
    "@stylistic/eslint-plugin-ts": "^1.4.0",
    "@types/express": "^4.17.20",
    "@types/jasmine": "^5.1.1",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "prettier": "2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexAllGold/sports-keeper.git"
  },
  "keywords": [
    "js",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/AlexAllGold/sports-keeper/issues"
  }
}
